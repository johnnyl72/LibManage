<div class="row my-4">
    <div class="col-3">
        <h2>Search</h2>
        <%= form_with scope: :search, url: search_path, method: :get, local: true do |form| %>
            <div class="form-group">
                <%= form.label :title %>
                <%= form.text_field :title, class: "form-control", placeholder: "Book title" %>
            </div>
            <div class="form-group">
                <%= form.label :author %>
                <%= form.text_field :author, class: "form-control", placeholder: "Book author" %>
            </div>
        <%= form.submit "Search", class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class="col-9">
        <h2>Results</h2>
        <ul class="list-group">
            <% if @results.any? %>
                <% @results.each do |result| %>
                    <li class="list-group-item">
                        <h5><%= link_to result.title, result %></h5>
                        <%= content_tag :div, "By: #{result.author}" %>
                        <%= content_tag :div, "Available: #{result.available}" %>
                        <%= content_tag :div, "Copies: #{result.copies}" %>
                    </li>
                <% end %>
            <% else %>
                <li class="list-group-item">NOTHING!</li>
            <% end %>
        </ul>
    </div>
</div>
