<p id="notice"><%= notice %></p>

<h2>Books</h2>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Author</th>
      <th scope="col">Title</th>
      <th scope="col">Isbn</th>
      <th scope="col">Copies</th>
      <th scope="col">Available</th>
      <th scope="col">Image</th>
      <th scope="col">Actions</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td scope="row"><%= book.author %></td>
        <td scope="row"><%= book.title %></td>
        <td scope="row"><%= book.isbn %></td>
        <td scope="row"><%= book.copies %></td>
        <td scope="row"><%= book.available %></td>
        <td scope="row"><%= image_tag book.image, size: "125x175" if book.image.attached? %> </td>
        <td scope="row"><%= link_to 'Open', book %></td>
        <% if(current_user && current_user.admin?) %>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if(current_user && current_user.admin?) %>
  <%= link_to 'Add New Book', new_book_path %>
  <% end %>
<br>
</br>
