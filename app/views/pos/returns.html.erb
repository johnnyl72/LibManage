<% if flash[:notice] %>
    <div class="alert alert-primary">
        <%= flash[:notice] %>
    </div>
<% end %>
<div class="row">
    <div class="col-8">
        <h2>Shelving</h2>
        <div class="card">
            <div class="card-body">
                <%= form_with url: returns_path do |form| %>
                    <div class="form-group">
                        <%= form.label :books, "Item IDs" %>
                        <%= form.text_area :books, class: "form-control", placeholder: "<book> <book> <book>" %>
                    </div>
                    <%= form.submit "Submit", class: "btn btn-primary" %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="col-4">
        <h4>Help</h4>
        <p>
            Input the books that have been returned to mark them as processing. Once the books are shelved, mark them as shelved <%= link_to "here", shelving_path %>.
        </p>
        <%= link_to "Return", pos_path, class: "btn btn-secondary" %>
    </div>
</div>
